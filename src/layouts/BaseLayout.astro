---
interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
}

const {
  title,
  description,
  image,
  type = 'website',
  publishedTime,
} = Astro.props;
const siteTitle = 'Karolis Å arapnickis';
const siteUrl = 'https://karolis.sh';
const pageTitle = title ? `${title} | k.sh` : siteTitle;
const pageDescription = description || 'I build neat things using JavaScript.';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
const ogImage = image
  ? new URL(image, siteUrl).toString()
  : `${siteUrl}/og-image.png`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={pageDescription} />
    <title>{pageTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content={siteTitle} />
    {
      publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />
  </head>
  <body class="antialiased text-gray-900">
    <slot />
  </body>
</html>

<style is:global>
  @import 'tailwindcss';
  @plugin '@tailwindcss/typography';

  /* Inline code - Notion style */
  .prose :where(code):not(:where(pre *)) {
    background-color: rgba(135, 131, 120, 0.15);
    color: #eb5757;
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.85em;
    font-weight: 400;
    font-family: 'SFMono-Regular', Menlo, Consolas, monospace;
  }

  .prose :where(code):not(:where(pre *))::before,
  .prose :where(code):not(:where(pre *))::after {
    content: none;
  }

  /* Code blocks - light, minimal */
  pre.astro-code {
    counter-reset: line;
    padding: 1rem 0;
    border-radius: 4px;
    font-size: 0.85rem;
    border: 1px solid #e5e7eb;
  }

  pre.astro-code > code {
    display: block;
  }

  pre.astro-code .line {
    display: inline-block;
    width: 100%;
    padding: 0 1rem;
  }

  pre.astro-code .line::before {
    counter-increment: line;
    content: counter(line);
    display: inline-block;
    width: 2rem;
    margin-right: 1rem;
    text-align: right;
    color: #9ca3af;
    user-select: none;
  }

  /* Highlighted lines */
  pre.astro-code .line.highlighted {
    background-color: rgba(255, 212, 0, 0.14);
  }
</style>
