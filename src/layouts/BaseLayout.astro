---
interface Props {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  publishedTime?: string;
}

const {
  title,
  description,
  image,
  type = 'website',
  publishedTime,
} = Astro.props;
const siteTitle = 'Karolis Å arapnickis';
const siteUrl = 'https://karolis.sh';
const pageTitle = title ? `${title} | k.sh` : siteTitle;
const pageDescription =
  description ||
  'Software engineer building backend systems and AI infrastructure.';
const canonicalUrl = new URL(Astro.url.pathname, siteUrl).toString();
const ogImage = image
  ? new URL(image, siteUrl).toString()
  : `${siteUrl}/og-image.png`;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={pageDescription} />
    <title>{pageTitle}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="theme-color" content="#0a0a0f" />
    <link rel="canonical" href={canonicalUrl} />

    <!-- Open Graph -->
    <meta property="og:type" content={type} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:title" content={pageTitle} />
    <meta property="og:description" content={pageDescription} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content={siteTitle} />
    {
      publishedTime && (
        <meta property="article:published_time" content={publishedTime} />
      )
    }

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={pageTitle} />
    <meta name="twitter:description" content={pageDescription} />
    <meta name="twitter:image" content={ogImage} />
  </head>
  <body class="antialiased bg-[#0a0a0f] text-gray-300">
    <!-- Noise overlay -->
    <div
      class="pointer-events-none fixed inset-0 z-50 opacity-[0.04]"
      aria-hidden="true"
    >
      <svg class="h-full w-full">
        <filter id="noise">
          <feTurbulence
            type="fractalNoise"
            baseFrequency="0.8"
            numOctaves="4"
            stitchTiles="stitch"></feTurbulence>
        </filter>
        <rect width="100%" height="100%" filter="url(#noise)"></rect>
      </svg>
    </div>
    <slot />
  </body>
</html>

<style is:global>
  @import 'tailwindcss';
  @plugin '@tailwindcss/typography';

  /* Inline code */
  .prose :where(code):not(:where(pre *)) {
    background-color: rgba(255, 255, 255, 0.06);
    color: #e5b567;
    padding: 0.2em 0.4em;
    border-radius: 3px;
    font-size: 0.85em;
    font-weight: 400;
    font-family: 'SFMono-Regular', Menlo, Consolas, monospace;
  }

  .prose :where(code):not(:where(pre *))::before,
  .prose :where(code):not(:where(pre *))::after {
    content: none;
  }

  /* Code blocks - dark theme */
  pre.astro-code {
    counter-reset: line;
    padding: 1rem 0;
    border-radius: 6px;
    font-size: 0.85rem;
    background-color: rgba(255, 255, 255, 0.03) !important;
    border: 1px solid rgba(255, 255, 255, 0.06);
  }

  pre.astro-code > code {
    display: block;
  }

  pre.astro-code .line {
    display: inline-block;
    width: 100%;
    padding: 0 1rem;
  }

  pre.astro-code .line::before {
    counter-increment: line;
    content: counter(line);
    display: inline-block;
    width: 2rem;
    margin-right: 1rem;
    text-align: right;
    color: rgba(255, 255, 255, 0.25);
    user-select: none;
  }

  /* Highlighted lines */
  pre.astro-code .line.highlighted {
    background-color: rgba(255, 255, 255, 0.05);
  }

  /* Prose links */
  .prose a {
    color: #d1d5db;
    text-decoration: underline;
    text-underline-offset: 4px;
    text-decoration-color: #4b5563;
    transition:
      color 0.15s,
      text-decoration-color 0.15s;
  }

  .prose a:hover {
    color: #f3f4f6;
    text-decoration-color: #6b7280;
  }

  /* Prose images */
  .prose img {
    border-radius: 0.5rem;
    box-shadow: 0 0 0 1px rgba(255, 255, 255, 0.1);
  }
</style>
