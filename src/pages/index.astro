---
import BaseLayout from '../layouts/BaseLayout.astro';
import ParticleBackground from '../components/ParticleBackground.astro';
---

<BaseLayout>
  <ParticleBackground />

  <main
    class="min-h-screen flex items-center justify-center px-6 py-12 md:px-12 md:py-16"
  >
    <div class="max-w-lg w-full">
      <!-- Photo -->
      <img
        src="/profile.png"
        alt="Karolis Šarapnickis"
        class="w-36 md:w-44 rounded-lg mb-8 grayscale-[50%] brightness-[0.9] saturate-[0.4] contrast-[1.05] ring-1 ring-white/10"
      />

      <!-- Name -->
      <h1
        class="text-4xl md:text-5xl font-light text-gray-100 tracking-tight mb-2"
      >
        Karolis Šarapnickis
      </h1>

      <!-- Pronunciation -->
      <p class="text-sm text-gray-500 mb-8">
        <a
          href="https://ipa-reader.com/?text=%CB%88karol%C9%AAs%20%CA%83arapn%C9%99tsk%C9%AAs"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-gray-400 focus:text-gray-400 transition-colors focus:outline-none"
        >
          /ˈkarolɪs ʃarapnətskɪs/
        </a>
      </p>

      <!-- Bio -->
      <div class="space-y-5 text-lg leading-relaxed text-gray-300/90 mb-10">
        <p>
          I've been building software for over a decade, across frontend,
          backend, and team leadership. Following the problems that felt hardest
          to solve.
        </p>
        <p>
          These days, that means backend systems and AI infrastructure: RAG
          pipelines, memory architectures, agent orchestration. Making AI
          systems that hold up in production.
        </p>
        <p>I keep notes on things I'm figuring out.</p>
      </div>

      <!-- Links -->
      <nav class="flex flex-wrap gap-x-4 gap-y-2 text-sm text-gray-500">
        <a
          href="https://github.com/karolis-sh"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-gray-200 focus:text-gray-200 transition-all focus:outline-none hover:underline hover:underline-offset-4 hover:decoration-gray-500"
        >
          GitHub
        </a>
        <span class="text-gray-700" aria-hidden="true">·</span>
        <a
          href="https://www.linkedin.com/in/karolis-sh/"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-gray-200 focus:text-gray-200 transition-all focus:outline-none hover:underline hover:underline-offset-4 hover:decoration-gray-500"
        >
          LinkedIn
        </a>
        <span class="text-gray-700" aria-hidden="true">·</span>
        <a
          href="mailto:hi@karolis.sh"
          class="hover:text-gray-200 focus:text-gray-200 transition-all focus:outline-none hover:underline hover:underline-offset-4 hover:decoration-gray-500"
        >
          Email
        </a>
        <span class="text-gray-700" aria-hidden="true">·</span>
        <a
          href="/blog/"
          class="hover:text-gray-200 focus:text-gray-200 transition-all focus:outline-none hover:underline hover:underline-offset-4 hover:decoration-gray-500"
        >
          Blog
        </a>
      </nav>
    </div>
  </main>
</BaseLayout>
