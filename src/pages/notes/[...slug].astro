---
import { getCollection, render } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const notes = await getCollection('notes', ({ data }) => {
    if (import.meta.env.PROD) {
      return !data.draft;
    }
    return true;
  });
  return notes.map((note) => ({
    params: { slug: note.slug },
    props: { note },
  }));
}

const { note } = Astro.props;
const { Content } = await render(note);
---

<BaseLayout title={note.data.title} description={note.data.description}>
  <main class="min-h-screen px-6 py-16 md:px-12">
    <div class="max-w-2xl mx-auto">
      <header class="mb-12">
        <a
          href="/notes/"
          class="text-sm text-gray-500 hover:text-gray-300 focus:text-gray-300 transition-colors focus:outline-none"
        >
          &larr; Notes
        </a>
      </header>

      <article>
        <header class="mb-10">
          <h1 class="text-3xl font-light text-gray-100">{note.data.title}</h1>
          <p class="text-gray-400 mt-3">{note.data.description}</p>
        </header>

        <div
          class="prose prose-invert prose-gray max-w-none prose-headings:font-light prose-headings:text-gray-200 prose-p:text-gray-300 prose-strong:text-gray-200 prose-li:text-gray-300"
        >
          <Content />
        </div>
      </article>
    </div>
  </main>
</BaseLayout>
