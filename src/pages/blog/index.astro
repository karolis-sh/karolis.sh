---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

const posts = await getCollection('blog');
const sortedPosts = posts.sort(
  (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
);
---

<BaseLayout title="Blog" description="Blog posts">
  <div class="min-h-screen bg-gray-100">
    <header class="bg-white border-b py-5">
      <div class="max-w-3xl mx-auto px-4">
        <a
          href="/"
          class="text-teal-600 hover:text-teal-700 focus:text-teal-700 focus:outline-none"
          >&larr; Home</a
        >
      </div>
    </header>

    <main class="max-w-3xl mx-auto px-4 py-8">
      <h1 class="text-3xl font-bold mb-8">Blog</h1>

      <ul class="space-y-4">
        {
          sortedPosts.map((post) => (
            <li>
              <a
                href={`/blog/${post.slug}/`}
                class="block bg-white p-5 border hover:border-teal-500 focus:border-teal-500 transition-colors focus:outline-none"
              >
                <h2 class="font-semibold text-lg">{post.data.title}</h2>
                <p class="text-sm text-gray-600 mt-1">
                  {post.data.description}
                </p>
                <p class="text-xs text-gray-400 mt-2">{post.data.date}</p>
              </a>
            </li>
          ))
        }
      </ul>
    </main>
  </div>
</BaseLayout>
