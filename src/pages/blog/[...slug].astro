---
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  image={post.data.banner?.src}
  type="article"
  publishedTime={post.data.date}
>
  <main class="min-h-screen px-6 py-16 md:px-12">
    <div class="max-w-2xl mx-auto">
      <header class="mb-12">
        <a
          href="/blog/"
          class="text-sm text-gray-500 hover:text-gray-300 focus:text-gray-300 transition-colors focus:outline-none"
        >
          &larr; Blog
        </a>
      </header>

      <article>
        <header class="mb-10">
          <h1 class="text-3xl font-light text-gray-100">{post.data.title}</h1>
          <p class="text-gray-400 mt-3">{post.data.description}</p>
          <p class="text-sm text-gray-500 mt-2">{post.data.date}</p>
          {
            post.data.banner && (
              <Image
                src={post.data.banner}
                alt={post.data.title}
                widths={[400, 800, 1200]}
                sizes="(max-width: 768px) 100vw, 800px"
                class="w-full h-48 md:h-64 object-cover rounded-lg mt-8 opacity-90 ring-1 ring-white/10"
                loading="eager"
              />
            )
          }
        </header>

        <div
          class="prose prose-invert prose-gray max-w-none prose-headings:font-light prose-headings:text-gray-200 prose-p:text-gray-300 prose-strong:text-gray-200 prose-li:text-gray-300"
        >
          <Content />
        </div>
      </article>

      <footer class="mt-16 pt-8 border-t border-white/[0.05]">
        <nav class="flex flex-wrap gap-x-4 gap-y-2 text-sm text-gray-500">
          <a
            href="https://github.com/karolis-sh"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-gray-300 focus:text-gray-300 transition-colors focus:outline-none"
          >
            GitHub
          </a>
          <span class="text-gray-700">·</span>
          <a
            href="https://www.linkedin.com/in/karolis-sh/"
            target="_blank"
            rel="noopener noreferrer"
            class="hover:text-gray-300 focus:text-gray-300 transition-colors focus:outline-none"
          >
            LinkedIn
          </a>
          <span class="text-gray-700">·</span>
          <a
            href="mailto:hi@karolis.sh"
            class="hover:text-gray-300 focus:text-gray-300 transition-colors focus:outline-none"
          >
            Email
          </a>
        </nav>
      </footer>
    </div>
  </main>
</BaseLayout>
