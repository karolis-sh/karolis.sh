---
import { getCollection, render } from 'astro:content';
import { Image } from 'astro:assets';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<BaseLayout
  title={post.data.title}
  description={post.data.description}
  image={post.data.banner?.src}
  type="article"
  publishedTime={post.data.date}
>
  <div class="min-h-screen bg-gray-100">
    <header class="bg-white border-b py-5">
      <div class="max-w-3xl mx-auto px-4">
        <a
          href="/"
          class="text-teal-600 hover:text-teal-700 focus:text-teal-700 focus:outline-none"
          >&larr; Home</a
        >
      </div>
    </header>

    <main class="max-w-3xl mx-auto px-4 py-8">
      <article class="bg-white p-6 md:p-10">
        <header class="mb-8">
          <h1 class="text-3xl font-bold">{post.data.title}</h1>
          <p class="text-gray-600 mt-2">{post.data.description}</p>
          <p class="text-sm text-gray-500 mt-1">{post.data.date}</p>
          {
            post.data.banner && (
              <Image
                src={post.data.banner}
                alt={post.data.title}
                widths={[400, 800, 1200]}
                sizes="(max-width: 768px) 100vw, 800px"
                class="w-full h-48 md:h-64 object-cover rounded-lg mt-6"
                loading="eager"
              />
            )
          }
        </header>

        <div class="prose prose-gray max-w-none">
          <Content />
        </div>
      </article>
    </main>

    <footer class="bg-gray-100 py-8">
      <div class="max-w-3xl mx-auto px-4 text-center text-sm text-gray-600">
        <a
          href="https://github.com/karolis-sh"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-teal-600 focus:text-teal-600 focus:outline-none"
        >
          GitHub
        </a>
        <span class="mx-2">·</span>
        <a
          href="https://www.linkedin.com/in/karolis-sh/"
          target="_blank"
          rel="noopener noreferrer"
          class="hover:text-teal-600 focus:text-teal-600 focus:outline-none"
        >
          LinkedIn
        </a>
        <span class="mx-2">·</span>
        <a
          href="mailto:hi@karolis.sh"
          class="hover:text-teal-600 focus:text-teal-600 focus:outline-none"
          >Email</a
        >
      </div>
    </footer>
  </div>
</BaseLayout>
