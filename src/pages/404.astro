---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout
  title="Page Not Found"
  description="The page you're looking for doesn't exist."
>
  <main class="min-h-screen flex items-center justify-center px-6">
    <div class="text-center">
      <p class="text-8xl font-light text-gray-700 mb-4">404</p>
      <p class="text-xl text-gray-400 mb-10">Page not found</p>
      <a
        href="/"
        class="text-sm text-gray-500 hover:text-gray-300 focus:text-gray-300 transition-colors focus:outline-none"
      >
        &larr; Go home
      </a>
    </div>
  </main>
</BaseLayout>
